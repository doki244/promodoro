<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dit_layout"
        >

        <TextView
            android:id="@+id/dit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_11ssp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:id="@+id/expand"
        >

            <TextView
                android:id="@+id/totalrest_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Rest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalfocus_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="1dp"
                android:text="Total focus"
                app:layout_constraintStart_toEndOf="@+id/totalrest_tx"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/day_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="1dp"
                android:text="Day"
                app:layout_constraintStart_toEndOf="@+id/totalfocus_tx"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/week_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="1dp"
                android:text="Week"
                app:layout_constraintStart_toEndOf="@+id/day_tx"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/month_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="1dp"
                android:text="Month"
                app:layout_constraintStart_toEndOf="@+id/week_tx"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5M"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalrest_tx" />

            <TextView
                android:id="@+id/totalfocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginTop="1dp"
                android:text="10M"
                app:layout_constraintStart_toEndOf="@+id/totalrest"
                app:layout_constraintTop_toBottomOf="@+id/totalrest_tx" />
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_37sdp"
                android:layout_marginTop="1dp"
                android:text="10M"
                app:layout_constraintStart_toEndOf="@+id/totalfocus"
                app:layout_constraintTop_toBottomOf="@+id/totalrest_tx" />
            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="1dp"
                android:text="10M"
                app:layout_constraintStart_toEndOf="@+id/day"
                app:layout_constraintTop_toBottomOf="@+id/totalrest_tx" />
            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_29sdp"
                android:layout_marginTop="1dp"
                android:text="10M"
                app:layout_constraintStart_toEndOf="@+id/week"
                app:layout_constraintTop_toBottomOf="@+id/totalrest_tx" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>