<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c243c"
    tools:context=".add">

    <com.mohammedalaa.seekbar.RangeSeekBarView
        android:id="@+id/long_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        app:barHeight="15dp"
        app:baseColor="@color/navy"
        app:circleFillColor="@color/green"
        app:circleRadius="15dp"
        app:circleTextColor="@color/white"
        app:circleTextSize="@dimen/value_bar_circleTextSize"
        app:currentValue="15"
        app:fillColor="#22b07e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxValue="30"
        app:minValue="1"
        app:orientation="LEFT_TO_RIGHT"
        app:stepValue="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"

        android:layout_marginBottom="4dp"
        android:text="short break time"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/short_break"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mohammedalaa.seekbar.RangeSeekBarView
        android:id="@+id/focus_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:barHeight="15dp"
        app:baseColor="@color/navy"
        app:circleFillColor="@color/green"
        app:circleRadius="15dp"
        app:circleTextColor="@color/white"
        app:circleTextSize="@dimen/value_bar_circleTextSize"
        app:currentValue="25"
        app:fillColor="#22b07e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxValue="60"
        app:minValue="1"
        app:orientation="LEFT_TO_RIGHT"
        app:stepValue="1" />

    <com.mohammedalaa.seekbar.RangeSeekBarView
        android:id="@+id/short_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        app:barHeight="15dp"
        app:baseColor="@color/navy"
        app:circleFillColor="@color/green"
        app:circleRadius="15dp"
        app:circleTextColor="@color/white"
        app:circleTextSize="@dimen/value_bar_circleTextSize"
        app:currentValue="5"
        app:fillColor="#22b07e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxValue="15"
        app:minValue="1"
        app:orientation="LEFT_TO_RIGHT"
        app:stepValue="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:textColor="@color/white"

        android:layout_marginBottom="5dp"
        android:text="focus time"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/focus_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"

        android:text="long break time"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/long_break"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mohammedalaa.seekbar.RangeSeekBarView
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        app:barHeight="15dp"
        app:baseColor="@color/navy"
        app:circleFillColor="@color/green"
        app:circleRadius="15dp"
        app:circleTextColor="@color/white"
        app:circleTextSize="@dimen/value_bar_circleTextSize"
        app:currentValue="4"
        app:fillColor="#22b07e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxValue="10"
        app:minValue="1"
        app:orientation="LEFT_TO_RIGHT"
        app:stepValue="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:textColor="@color/white"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="sets"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/set"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:textColor="@color/white"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginStart="9dp"
        android:textColorHint="@color/white"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="93dp"

        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set">


        <ImageView
            android:id="@+id/green"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/red"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="184dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="236dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/black"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="288dp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:text="pick a color:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/black_check"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yellow_check"
            app:layout_constraintTop_toBottomOf="@+id/black" />

        <com.animsh.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/blue_check"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginStart="137dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue"
            app:border_stroke_width="2dp"
            app:color_checked="#2A0088"
            app:color_tick="@color/blue"
            app:color_unchecked="@color/blue"
            app:color_unchecked_stroke="@color/black"
            app:small_tick="true"
            app:tick_stroke_width="1dp" />


        <com.animsh.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/red_check"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toEndOf="@+id/blue_check"
            app:layout_constraintTop_toBottomOf="@+id/red"
            app:border_stroke_width="2dp"
            app:color_checked="#EF0E21"
            app:color_tick="@color/red"
            app:color_unchecked="@color/red"
            app:color_unchecked_stroke="@color/black"
            app:small_tick="true"
            app:tick_stroke_width="1dp"
            />

        <CheckBox
            android:id="@+id/yellow_check"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/red_check"
            app:layout_constraintTop_toBottomOf="@+id/yellow" />

        <CheckBox
            android:id="@+id/green_check"
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toEndOf="@+id/black_check"
            app:layout_constraintTop_toBottomOf="@+id/green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/create"
        android:backgroundTint="@null"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:layout_marginStart="@dimen/_54sdp"
        android:layout_marginTop="@dimen/_75sdp"
        android:layout_marginEnd="@dimen/_54sdp"
        android:background="@drawable/bgbtngreen"
        android:text="create"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>